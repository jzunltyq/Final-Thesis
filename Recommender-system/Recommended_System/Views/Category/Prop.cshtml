@model Recommended_System.Models.Itemadder
@{
    ViewBag.Title = "Category Properites";
}


               
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true)

                    <fieldset >
                        
                        <legend class="alert-info alert"> Categories</legend>

                        <label style="color:red">@ViewBag.message</label><br />
                        
                        <table class="table table-striped table-bordered">
                            @for (int i = 0; i < Model.counter; i++)
                            {
                                <tr>
                                    <td>
                                        Properites # @i =

                                    </td>
                                    <td>
                                        @Html.TextBoxFor(model => model.pv[i] , new { @class="form-control field"} )
                                        @Html.ValidationMessageFor(model => model.pv[i])
                                       
                                        @Html.TextBoxFor(m => m.ind[i], new { @type = "hidden" })
                                        @Html.ValidationMessageFor(model => model.ind[i])
                                    </td>
                                </tr>
                            }
                            </table>
                        <input type="submit" value="add" class="btn btn-primary"  />
</fieldset>

                }

               
          


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}