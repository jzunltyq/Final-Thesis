@model IEnumerable<Recommended_System.Models.Av_Cust2>

@{
    ViewBag.Title = "Waiting List ";

}


<h3>
    <span class="alert alert-info " style="position:relative">
        <b> Waiting List </b>
    </span>
</h3>
<br /><br />

<table class="table table-striped table-bordered" style="text-align:center">
    <tr>
        <th>
            <span class="label label-success centrLbl ">
                @Html.DisplayNameFor(model => model.Cust_Nme)
            </span>
        </th>
        <th>
            <span class="label label-primary centrLbl ">
                @Html.DisplayNameFor(model => model.Phone)
            </span>
        </th>
        <th>
            <span class="label label-danger centrLbl ">
                @Html.DisplayNameFor(model => model.E_mail)
            </span>
        </th>
        <th>
            <span class="label label-warning centrLbl ">
                @Html.DisplayNameFor(model => model.Account_count)
            </span>
        </th>
        <th>
            <span class="label label-info centrLbl ">
                @Html.DisplayNameFor(model => model.Start_Time)
            </span>
        </th>

        <th>
            <span class="label label-success centrLbl ">
                @Html.DisplayNameFor(model => model.Sup_Type)
            </span>
        </th>
        <th>
            <span class="label label-primary centrLbl ">
                Take an Ation
            </span>
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td align="center">
                @Html.DisplayFor(modelItem => item.Cust_Nme)
            </td>
            <td align="center">
                @Html.DisplayFor(modelItem => item.Phone)
            </td>
            <td align="center">
                @Html.DisplayFor(modelItem => item.E_mail)
            </td>
            <td align="center">
                @Html.DisplayFor(modelItem => item.Account_count)
            </td>
            <td align="center">
                @Html.DisplayFor(modelItem => item.Start_Time)
            </td>
            <td align="center">
                @Html.DisplayFor(modelItem => item.Sup_Type)
            </td>
            <td align="center">
                @if (item.Cust_Id > 0)
                {
                    <span>
                        <i class="fa-edit fa fa_Green "></i>&nbsp;
                        @Html.ActionLink("Confirm", "Create", new { id = item.Cust_Id })
                    </span>

                    <span>
                        <i class="fa-trash-o fa fa_Red "></i>&nbsp;
                        @Html.ActionLink("Reject", "Delete", new { id = item.Cust_Id })
                    </span>
                }

                @if (item.Cust_Id < 0)
                {
                    <span>
                        <i class="fa-edit fa fa_Green "></i>&nbsp;
                        @Html.ActionLink("Renew", "Renew", new { id = item.Cust_Id + 1000000000 })
                    </span>

                    <span>
                        <i class="fa-trash-o fa fa_Red "></i>&nbsp;
                        @Html.ActionLink("Reject", "Delete", new { id = item.Cust_Id + 1000000000 })
                    </span>
                }

            </td>
        </tr>
    }

</table>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
