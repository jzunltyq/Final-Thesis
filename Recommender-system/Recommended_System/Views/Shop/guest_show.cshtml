@model Recommended_System.Models.Shop_adder

@{
    ViewBag.Title = @Model.shp.About + "  Info" ;
}


<h2><span class="label alert-info "> @Model.shp.About Info </span></h2>
<br />
<table class="table table-striped table-bordered" style="text-align:center">

    <tr><td><span class="label label-danger">Shop Name  </span></td> 
    <td> <span class="label alert-danger" >@Model.shp.About </span> </td>
    </tr>

    <tr><td><span class="label label-warning">Delevery </span></td> 
    <td>    <span class="label alert-warning"> @Model.shp.Delevery </span>   </td></tr>

    <tr><td><span class="label label-primary">Shop phone </span></td> <td>
              <span class="label alert-info"> @Model.shp.Phone  </span>
        </td>
    </tr>
    <tr>
        <td><span class="label label-success">Shop Location </span></td>
        <td>
            <span class="label alert-success"> @Model.shp.Location.Split('|')[2]  </span>
        </td>
    </tr>



</table>

<table class="table table-striped table-bordered" style="text-align:center">
    <tr>
        <th>
            <span class="label label-success" style="text-align:center">
                Items
            </span>
        </th>
        <th>
            <span class="label label-primary " style="text-align:center">
                Category
            </span>
        </th>

    </tr>

    @for (int i = 0; i < Model.sv.Count; i++)
    {
        <tr>
            <td>

                @Html.ActionLink(Model.sv[i], "Details", "Item", new { id = Model.indx[i] }, null )
            </td>
            <td >

                @Model.categ[i] 
            </td>

        </tr >
    }
</table>
<span class="btn-link btn alert-warning">
    @Html.ActionLink("Show " + @Model.shop_name + " Location", "detmap", new { id = @Model.shop_id }, null)
</span>
